{
  "editor.renderWhitespace": "all",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true,
    "editor.rulers": [120],
    "editor.renderWhitespace": "all",
  },
  "cSpell.words": [
    "canonicalize",
    "fenv",
    "getppid",
    "Heejoon",
    "indoc",
    "Kang",
    "norc",
    "powdream",
    "PPID",
    "precache",
    "printdoc",
    "pyenv",
    "replacen",
    "unistd"
  ],
  "cSpell.ignorePaths": [
    ".vscode",
    "Cargo.*",
    "**/.rustup/**"
  ],
  "rust-analyzer.showUnlinkedFileNotification": false,
  "files.trimTrailingWhitespace": true
}
